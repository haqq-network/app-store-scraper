{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src//*"],
  "exclude": ["node_modules", "/*.spec.ts"]
}
